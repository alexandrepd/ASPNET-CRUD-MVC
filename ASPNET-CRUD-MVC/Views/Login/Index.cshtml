@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 ">

                    <h3 class="mb-2 text-center">Sign in</h3>
                    <form asp-controller="Login" asp-action="Login" class="form-group mb-4" method="post">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                        <div class="form-outline mb-2">
                            <label for="name">Name</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter name">
                            @Html.ValidationMessageFor(userName => userName.UserName)
                        </div>

                        <div class="form-group mb-4">
                            <label for="" password">Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter phone number">
                            @Html.ValidationMessageFor(password => password.Password)
                        </div>

                        <!-- Checkbox --- not working yet-->
                        <div class="form-check d-flex justify-content-start mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                            <label class="form-check-label" for="form1Example3"> Remember password </label>
                        </div>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="text-center">
    @if (TempData["SucessMessage"] != null)
    {

        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["SucessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }

</div>