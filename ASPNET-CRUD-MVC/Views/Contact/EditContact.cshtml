@model ContactModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="text-center">

    <h1 class="display-4">Edit contact</h1>
</div>
<form asp-controller="Contact" asp-action="EditContact" method="post">

    <input type="hidden" asp-for="Id">


    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(name => name.Name)
    </div>

    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
        @Html.ValidationMessageFor(email => email.Email)
    </div>


    <div class="form-group">
        <label for="PhoneNumber">PhoneNumber</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
        @Html.ValidationMessageFor(PhoneNumber => PhoneNumber.PhoneNumber)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Save</button>
    <a class="btn btn-secondary  btn-block" asp-controller="User" asp-action="Index"> Back</a>
</form>


